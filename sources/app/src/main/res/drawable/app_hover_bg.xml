<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- leicht transparentes Orange #FF2B00 -->
    <solid android:width="4dp" android:color="#00000000" /> <!-- 22 = ca. 13% Transparenz -->

    <!-- Randfarbe transparentes Orange #FF2B00 -->
    <stroke android:width="4dp" android:color="#88FF2B00" /> <!-- 22 = ca. 13% Transparenz -->

    <!-- abgerundete Ecken bei Bedarf -->
    <corners android:radius="0dp"/>

    <!-- optional, damit der Rand nicht direkt am Icon klebt -->
    <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp" />
</shape>
